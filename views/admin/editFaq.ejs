
<!-- Header Start -->
<%- include('header.ejs'); %>
<!-- Header End -->
 <link rel="stylesheet" href="/validation/css/global.css">
    <aside class="left-sidebar">

        <!-- Sidebar scroll-->
        <div class="scroll-sidebar">
            <%- include('sidebar.ejs'); %>
        </div>
        <!-- End Sidebar scroll-->

    </aside>

    <main class="py-4">
        <div class="page-wrapper">
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-themecolor">Add Faq</h3>
                </div>

                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#">Add Faq</a></li>
                    </ol>
                </div>
            </div>

            <div class="profile-form">
                <div class="card-body">
                    <div id="data-table_processing" class="dataTables_processing panel panel-default"
                        style="display: none;">Processing...
                    </div>

                    <div class="column">
                        <form method="post" action="/admin/addFaq" id="editFaqForm">
                            <input type="hidden" name="_csrf" value="">
                            <div class="row restaurant_payout_create">
                                <div class="restaurant_payout_create-inner">
                                    <fieldset>
                                        <legend>Faq's Details</legend>
                                        <div class="form-group row">
                                            <label class="col-5 control-label">FAQ</label>
                                            <div class="col-7">
                                                <input type="text" class="col-6 form-control" name="faq"  id="faq"  placeholder="Enter the faq" value="<%= faq.faq %>">
                                                <input type="hidden"  name="faq_id"  value="<%= faq.faq_id %>" >
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-5 control-label">Answer</label>
                                            <div class="col-7">
                                                <textarea rows="6" id="answer" name="answer"  class="description form-control" placeholder="Enter the answer"><%= faq.answer %></textarea>
                                                
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-12 text-center btm-btn">
                            <button type="submit" class="btn btn-primary  edit-setting-btn" id="edit-setting-btn"><i class="fa fa-save"></i> Submit</button>
                            <a href="/admin/viewFaq" class="btn btn-default"><i class="fa fa-undo"></i>Back </a>
                        </div>
                    </form>
            </div>
        </div>
    </main>

<!-- Footer Start -->
    <%- include('footer.ejs'); %>
<!-- Footer End -->

<script src="/validation/js/shivivalidation.js"></script>                 